<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyQuantVK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/mainDayNight</item>
        <!-- Secondary brand color. -->
        <item name="android:colorBackground">@color/mainDayNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="progressBarStyle">?attr/isLightTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>